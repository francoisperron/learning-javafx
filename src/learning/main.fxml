<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="learning.Controller">
    <TextField fx:id="inputField" GridPane.rowIndex="1" />
    <Label fx:id="label" text="write something" GridPane.rowIndex="2" />
    <Button fx:id="applyButton" mnemonicParsing="false" onAction="#applyButtonClicked" text="Apply" GridPane.rowIndex="3" />
</GridPane>
